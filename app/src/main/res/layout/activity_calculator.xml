<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#3f2b96"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="#fff">

        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:id="@+id/Fragment_Container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cal_grad"
                tools:context=".Calculator">


                <Button
                    android:id="@+id/add"
                    style="@android:style/Widget.DeviceDefault.Button.Borderless"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_above="@+id/sub"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/opertationripple"
                    android:elevation="16dp"
                    android:selectAllOnFocus="true"
                    android:text="+"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:translationZ="5dp" />

                <Button
                    android:id="@+id/mul"
                    style="@android:style/Widget.DeviceDefault.Button.Borderless"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_above="@+id/div"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/opertationripple"
                    android:elevation="16dp"
                    android:selectAllOnFocus="true"
                    android:text="*"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:translationZ="5dp" />

                <Button
                    android:id="@+id/sub"
                    style="@android:style/Widget.DeviceDefault.Button.Borderless"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_above="@+id/mul"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/opertationripple"
                    android:elevation="16dp"
                    android:selectAllOnFocus="true"
                    android:text="-"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp"
                    android:translationZ="5dp" />

                <Button
                    android:id="@+id/div"
                    style="@android:style/Widget.DeviceDefault.Button.Borderless"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/opertationripple"
                    android:elevation="16dp"
                    android:selectAllOnFocus="true"
                    android:text="/"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:translationZ="5dp" />


                <Button
                    android:id="@+id/btn7"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_above="@+id/sub"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/ripple"
                    android:elevation="16dp"
                    android:text="7"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:translationZ="5dp" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_above="@+id/btn5"
                    android:layout_toEndOf="@+id/btn7"
                    android:background="@drawable/ripple"
                    android:elevation="16dp"
                    android:text="8"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:translationZ="5dp" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_alignTop="@+id/add"
                    android:layout_toStartOf="@+id/add"
                    android:background="@drawable/ripple"
                    android:elevation="16dp"
                    android:text="9"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:translationZ="5dp" />

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/add"
                    android:background="@drawable/ripple"
                    android:elevation="16dp"
                    android:text="4"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:translationZ="5dp" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/add"
                    android:layout_toEndOf="@+id/btn7"
                    android:background="@drawable/ripple"
                    android:elevation="16dp"
                    android:text="5"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:translationZ="5dp" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/add"
                    android:layout_toStartOf="@+id/add"
                    android:background="@drawable/ripple"
                    android:elevation="16dp"
                    android:text="6"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:translationZ="5dp" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_above="@+id/btn0"
                    android:layout_alignStart="@+id/btn7"
                    android:background="@drawable/ripple"
                    android:elevation="16dp"
                    android:text="3"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:translationZ="5dp" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_above="@+id/div"
                    android:layout_toEndOf="@+id/btn7"
                    android:background="@drawable/ripple"
                    android:elevation="16dp"
                    android:text="2"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:translationZ="5dp" />

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_above="@+id/div"
                    android:layout_toStartOf="@+id/add"
                    android:background="@drawable/ripple"
                    android:elevation="16dp"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:translationZ="5dp" />

                <Button
                    android:id="@+id/clear"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_above="@+id/btn7"
                    android:layout_toEndOf="@+id/btn8"
                    android:background="@drawable/rippleac"
                    android:elevation="16dp"
                    android:text="AC"
                    android:textColor="@android:color/background_light"
                    android:textSize="24sp"
                    android:translationZ="5dp" />

                <Button
                    android:id="@+id/dec"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/mul"
                    android:layout_toEndOf="@+id/btn7"
                    android:background="@drawable/ripple"
                    android:elevation="16dp"
                    android:text="."
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:translationZ="5dp" />


                <Button
                    android:id="@+id/btn0"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/ripple"
                    android:elevation="16dp"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:translationZ="5dp" />

                <Button
                    android:id="@+id/del"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_above="@+id/add"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/opertationripple"
                    android:elevation="16dp"
                    android:gravity="center"
                    android:selectAllOnFocus="false"
                    android:text="DEL"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:translationZ="5dp" />

                <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="331dp"
                    android:layout_height="190dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:clickable="true"
                    android:elevation="16dp"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:translationZ="25dp"
                    app:cardBackgroundColor="#c1c5ff">

                    <TextView
                        android:id="@+id/op"
                        android:layout_width="330dp"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:hint="OPERATION"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/black"
                        android:textColorHint="#ffffff"
                        android:textSize="30sp"
                        tools:textColor="@android:color/background_light" />

                    <TextView
                        android:id="@+id/res"
                        android:layout_width="328dp"
                        android:layout_height="60dp"
                        android:layout_below="@+id/operation"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="125dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:hint="RESULT"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/black"
                        android:textColorHint="#ffffff"
                        android:textSize="30sp"
                        tools:textColor="@android:color/background_light" />

                    <TextView
                        android:id="@+id/operation"
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:layout_alignStart="@+id/add"
                        android:layout_below="@+id/op"
                        android:layout_marginStart="300dp"
                        android:layout_marginTop="75dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="24sp" />
                </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/eq1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="106dp"
                    android:background="@drawable/eq" />


            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="#f15c20"
        app:menu="@menu/drawer" />


</android.support.v4.widget.DrawerLayout>